// Loại công việc , Part Time , Full Time , Bao nhiêu kinh nghiệm
model Job_Type {
  id            BigInt    @id @default(autoincrement())
  job_type_name String
  is_active     Boolean   @default(true)
  is_delete     Boolean   @default(false)
  create_date   DateTime  @default(now())
  create_user   String
  update_date   DateTime?
  update_user   String?
  delete_date   DateTime?
  delete_user   String?
}

// Chuyên ngành IT , Kế Toán
model Majors {
  id          BigInt    @id @default(autoincrement())
  majors_name String
  is_active   Boolean   @default(true)
  is_delete   Boolean   @default(false)
  create_date DateTime  @default(now())
  create_user String
  update_date DateTime?
  update_user String?
  delete_date DateTime?
  delete_user String?
}

//Ngành nghề
model Job {
  job_id      BigInt    @id @default(autoincrement())
  job_name    String
  is_active   Boolean   @default(true)
  is_delete   Boolean   @default(false)
  create_date DateTime  @default(now())
  create_user String
  update_date DateTime?
  update_user String?
  delete_date DateTime?
  delete_user String?
}

model Apply_Profile {
  profile_id   BigInt       @id @default(autoincrement())
  profile_name String
  profile_link String? // Đường dẫn của hồ sơ được lưu trữ
  is_active    Boolean      @default(true)
  is_delete    Boolean      @default(false)
  create_date  DateTime     @default(now())
  create_user  String
  update_date  DateTime?
  update_user  String?
  delete_date  DateTime?
  delete_user  String?
  user_id      BigInt
  user         User_Account @relation(fields: [user_id], references: [id])
}

model Recruitment_Post {
  id          BigInt       @id @default(autoincrement())
  content     String
  recuiter_id BigInt
  user        User_Account @relation(fields: [recuiter_id], references: [id])
  to_value    BigInt       @default(0)
  from_vale   BigInt       @default(0)
  create_date DateTime     @default(now())
  create_user String
  update_date DateTime?
  update_user String?
  delete_date DateTime?
  delete_user String
  is_delete   Boolean      @default(false)
  is_active   Boolean      @default(true)
}

model History_Apply_Job {
  id          BigInt    @id @default(autoincrement())
  user_id     BigInt //  |
  post_id     BigInt //  | => cả 3 ID này sẽ được lưu lại khi người ứng viên
  profile_id  BigInt //  | ứng tuyển vào bài post
  create_date DateTime  @default(now())
  create_user String
  update_date DateTime?
  update_user String
  delete_date DateTime?
  delete_user String?
  is_delete   Boolean   @default(false)
  is_active   Boolean   @default(true)
}

model Recruitment_Post_Job_Type {
  id          BigInt    @id @default(autoincrement())
  post_id     Int // | 1 bài viết sẽ có nhiều loại công việc
  job_type_id Int // |  => Nhiều dòng dữ liệu group by theo bài post
  majors_id   Int // |  => Và giành cho nhiều ngành 
  create_date DateTime  @default(now())
  create_user String
  update_date DateTime?
  update_user String
  delete_date DateTime?
  delete_user String?
  is_delete   Boolean   @default(false)
  is_active   Boolean   @default(true)
}
